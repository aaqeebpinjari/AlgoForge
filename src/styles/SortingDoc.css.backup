/* ================================
   Additional mobile improvements
   ================================ */

@media (max-width: 640px) {
  .stats-grid {
    gap: 12px;
  }
  
  .stat-card {
    padding: 12px;
    min-height: 160px;
  }
  
  .stat-card h3 {
    font-size: 1rem;
  }
  
  .cta-row {
    flex-direction: column;
  }
}
